<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.dawei.silkroad.dev.logic.ChangePwdActivity">

    <include layout="@layout/common_title"></include>

    <EditText
        android:id="@+id/old_pwd"
        style="@style/input_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_border"
        android:hint="@string/input_old_pwd"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_pwd1"
        style="@style/input_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_border"
        android:hint="@string/setting_pwd"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_pwd2"
        style="@style/input_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_border"
        android:hint="@string/reconfirm"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_sure"
        style="@style/btn_style"
        android:text="@string/sure" />
</LinearLayout>
