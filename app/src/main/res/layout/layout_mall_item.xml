                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:text="霜凝万壑丹纸本水墨"
                            android:textColor="@color/colorWhite" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

