<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_open_shop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.dawei.silkroad.dev.shops.ui.OpenShopActivity">

    <include layout="@layout/common_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            style="@style/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.入驻须知："
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            style="@style/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="5dp"
            android:text="1.1  丝路汇开放平台有权根据包括但不限于品牌需求、公司经营状况、服务水平等其他因素退回卖家申请。" />

        <TextView
            style="@style/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="5dp"
            android:text="1.2  丝路汇开放平台有权在申请入驻及后续经营阶段要求卖家提供其他资源。" />

        <TextView
            style="@style/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="5dp"
            android:text="1.3  丝路汇开放平台将结合各行业发展动态、国家相关规定及消费者购买需求，不定期更新招商标准。" />

        <TextView
            style="@style/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="2.卖家必须如实提供资料和信息："
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            style="@style/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="5dp"
            android:text="2.1  请务必确保申请入驻及后续经营阶段提供的相关资料和信息的真实性、完整性、有效性（若卖家提供的相关资质为第三方提供，请务必先核实文件的真实有效完整性），一旦发现虚假资质或信息的，丝路汇开放平台将不再与卖家进行合作，并有权根据丝路汇开放平台规则及与卖家签署的相关协议之约进行处理。" />

        <Button
            android:id="@+id/btn_open"
            style="@style/btn_style"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="立即开通" />
    </LinearLayout>


</LinearLayout>
